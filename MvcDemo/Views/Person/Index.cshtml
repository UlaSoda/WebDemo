@model PersonsViewModel

@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<p>
    @Html.ActionLink("Add New", "Add")
</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Date of Birth</th>
        <th></th>
    </tr>
    @foreach (var student in Model.Persons)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Age</td>
            <td>@student.Birthday</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Name = student.Name }) |
                @Html.ActionLink("Delete", "Delete", new { Name = student.Name })
            </td>
        </tr>
    }
</table>